    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/textName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Họ tên"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textMSSV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MSSV"
        android:textSize="14sp"
        android:textColor="#666666" />
</LinearLayout>